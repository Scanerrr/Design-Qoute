//- menu list
mixin menu_item(item, id)
	li
		a(href="##{id}")= item
		
//- social media icon list
mixin social_item(url)
	li
		a(href="")
			img(src="#{url}")
		
//- quotes block
mixin quote(theme, text, author)
	.quote
		h3.theme= theme
		p.text= text
		if author == ""
			p.author Anonymous
		else
			p.author= author
